#!/bin/bash

set -e

# COLORS
OFF='\033[0m'
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'

# set the working directory to the root of the project
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"

echo -e "üß™ ${BLUE}running unit tests...${OFF}"

os="unknown"
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
  os="linux"
elif [[ "$OSTYPE" == "darwin"* ]]; then
  os="mac"
fi

skip_coverage=false
for arg in "$@"; do
  if [ "$arg" == "-s" ]; then
    skip_coverage=true
    break
  fi
done

# if -s was supplied as an argument, skip coverage reports (they can be slow)
if $skip_coverage; then
  crystal spec
elif [ "$os" == "mac" ]; then
  # on mac, code coverage isn't working for a reason I couldn't fix
  crystal spec
# if the kcov binary cannot be found, warn and run specs without coverage
elif [ ! -f "$DIR/bin/kcov" ]; then
  echo "WARN: the kcov binary cannot be found at $DIR/bin/kcov - no code coverage report will be generated"
  crystal spec
# otherwise, run specs with coverage
else
  set +e
  test_output=$($DIR/bin/crkcov --cleanup-coverage-before --coverage-dir $DIR/coverage --kcov-executable $DIR/bin/kcov --output)
  echo "$test_output"

  # save the line that contains `Total covored:` into a variable
  total_covered=$(echo "$test_output" | grep "Total covored:")
  echo "$total_covered" | grep -Pq "(9[0-9]|100)(\.[0-9]+)?" # 90% coverage or higher
  coverage_passed=$?
  set -e

  # check if the line contains the desired coverage percentage anywhere in the line
  if [ $coverage_passed -ne 0 ]; then
    echo -e "‚ùå ${RED}incomplete test coverage${OFF}"
    exit 1
  else
    echo -e "‚úÖ ${GREEN}100% test coverage!${OFF}"
  fi
fi

echo -e "‚úÖ ${GREEN}tests complete!${OFF}"
